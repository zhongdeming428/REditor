{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6", "dom", "es2016.array.include"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"outDir": "dist",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"removeComments": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"typings",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"es",
		"lib",
		"dist"
	],
	"include": ["src/**/*.*"]
}
