{
	"name": "readitor",
	"version": "0.0.2-rc",
	"main": "lib/index.js",
	"module": "es/index.js",
	"license": "MIT",
	"keywords": [
		"rte",
		"editor",
		"react",
		"typescript",
		"rich text editor"
	],
	"dependencies": {
		"styled-components": "^4.3.2",
		"styled-icons": "^8.1.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zhongdeming428/readitor"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.4.5",
		"@babel/preset-typescript": "^7.3.3",
		"@types/jest": "^24.0.15",
		"@types/react": "^16.8.22",
		"@types/react-dom": "^16.8.4",
		"@types/styled-components": "^4.1.16",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-polyfill": "^6.26.0",
		"husky": "^2.7.0",
		"jest": "^24.8.0",
		"parcel": "^1.12.3",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"rimraf": "^2.6.3",
		"typescript": "^3.5.2"
	},
	"scripts": {
		"build": "yarn run build:es && yarn run build:lib",
		"build:es": "npx rimraf es && tsc -m es2015 --outDir es",
		"build:lib": "npx rimraf lib && tsc -m commonjs --outDir lib",
		"start": "npx parcel ./demo/index.html -d demo/dist",
		"clean": "npx rimraf dist es lib demo/dist",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"!src/typings/**",
			"!src/*.ts"
		],
		"coverageDirectory": "coverage",
		"coverageReporters": [
			"text",
			"lcov"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": -10
			}
		}
	}
}
